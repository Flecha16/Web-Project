@model Project.Models.Employee

<h2 class="mb-4 text-center">Add Employee</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="card p-4" style="background-color: #008c90; color: #fff;">

            <div class="form-group mb-3">
                <label for="Name" class="form-label fw-bold">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" required />
            </div>

            <div class="form-group mb-3">
                <label for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="Email" required />
            </div>

            <div class="form-group mb-3">
                <label for="Phone" class="form-label fw-bold">Phone</label>
                <input asp-for="Phone" type="text" class="form-control" id="Phone" pattern="[0-9]+" title="Only Numbers Allowed" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="UserRole" class="form-label fw-bold">User Role</label>
                <select asp-for="UserRole" class="form-control" id="UserRole" required>
                    <option value="">Select an User Role</option>
                    @foreach (var value in Enum.GetValues(typeof(UserRoleType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-center mt-2">
                <button type="submit" class="btn btn-primary btn-lg me-2">Save</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>
