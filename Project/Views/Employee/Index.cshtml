@model IEnumerable<Project.Models.Employee>

<div class="my-4">
    <h1 class="text-center">Employee List</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead style="background-color: #008c90; color: #fff;">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Phone</th>
                <th class="text-center">User Role</th>
                <th class="text-center">Update</th>
                <th class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td class="text-center">@employee.Id</td>
                    <td class="text-center">@employee.Name</td>
                    <td class="text-center">@employee.Email</td>
                    <td class="text-center">@employee.Phone</td>
                    <td class="text-center">@employee.UserRole</td>
                    <td class="text-center"><a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary">Edit</a></td>
                    <td class="text-center"><a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
